<Window x:Class="PicPaste.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="检查更新 - PicPaste"
        Height="500"
        Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="#F5F5F5">

    <Border Background="White" Margin="20" CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.15"/>
        </Border.Effect>

        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题 -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="&#x2192;" FontSize="48" Foreground="#0078D4" HorizontalAlignment="Center"/>
                <TextBlock Text="检查更新" FontSize="22" FontWeight="Bold" Margin="0,10,0,5" HorizontalAlignment="Center"/>
                <TextBlock x:Name="TxtCurrentVersion" Text="当前版本: v1.0.0" FontSize="13" Foreground="#666" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- 更新源选择 -->
            <Border Grid.Row="1" Background="#F8F9FA" CornerRadius="6" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="选择更新源" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <RadioButton x:Name="RbGitHub" Content="GitHub" GroupName="UpdateSource" Margin="0,0,20,0"/>
                        <RadioButton x:Name="RbGitee" Content="Gitee（国内推荐）" GroupName="UpdateSource" IsChecked="True"/>
                    </StackPanel>
                    <TextBlock Text="提示：Gitee 服务器在国内，没有代理的情况下下载速度更快" 
                               FontSize="11" Foreground="#888" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- 检查按钮 -->
            <Button Grid.Row="2" x:Name="BtnCheckUpdate" Content="检查更新" 
                    Width="120" Height="36" HorizontalAlignment="Center"
                    Background="#0078D4" Foreground="White" FontWeight="SemiBold"
                    BorderThickness="0" Cursor="Hand" Click="OnCheckUpdate">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- 更新信息 -->
            <Border Grid.Row="3" x:Name="UpdateInfoPanel" Background="#F0F7FF" CornerRadius="6" 
                    Padding="15" Margin="0,15" Visibility="Collapsed">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock x:Name="TxtNewVersion" FontSize="16" FontWeight="Bold" Foreground="#0078D4" Margin="0,0,0,10"/>
                        <TextBlock x:Name="TxtReleaseDate" FontSize="12" Foreground="#666" Margin="0,0,0,10"/>
                        <TextBlock Text="更新内容:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtReleaseNotes" TextWrapping="Wrap" FontSize="12" Foreground="#333"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- 进度条 -->
            <StackPanel Grid.Row="4" x:Name="ProgressPanel" Visibility="Collapsed" Margin="0,10">
                <ProgressBar x:Name="ProgressBar" Height="8" Minimum="0" Maximum="100" Value="0"
                             Background="#E0E0E0" Foreground="#0078D4" BorderThickness="0">
                    <ProgressBar.Style>
                        <Style TargetType="ProgressBar">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ProgressBar">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                            <Grid>
                                                <Rectangle x:Name="PART_Track" Fill="Transparent"/>
                                                <Rectangle x:Name="PART_Indicator" Fill="{TemplateBinding Foreground}" 
                                                          HorizontalAlignment="Left" RadiusX="4" RadiusY="4"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ProgressBar.Style>
                </ProgressBar>
                <TextBlock x:Name="TxtProgress" Text="0%" HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="12" Foreground="#666"/>
            </StackPanel>

            <!-- 状态信息 -->
            <TextBlock Grid.Row="5" x:Name="TxtStatus" Text="" HorizontalAlignment="Center" 
                       FontSize="12" Foreground="#666" Margin="0,10,0,0"/>

            <!-- 底部按钮 -->
            <StackPanel Grid.Row="5" x:Name="ActionButtons" Orientation="Horizontal" 
                        HorizontalAlignment="Center" Margin="0,40,0,0" Visibility="Collapsed">
                <Button Content="立即更新" Width="100" Height="34" Margin="0,0,10,0"
                        Background="#0078D4" Foreground="White" FontWeight="SemiBold"
                        BorderThickness="0" Cursor="Hand" Click="OnDownloadUpdate">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#005A9E"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="稍后提醒" Width="100" Height="34"
                        Background="#E0E0E0" Foreground="#333"
                        BorderThickness="0" Cursor="Hand" Click="OnRemindLater">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#D0D0D0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
